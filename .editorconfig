root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[*.rs]
max_line_length = 119

[*.md]
# double whitespace at end of line denotes a line break in Markdown
trim_trailing_whitespace = false

[*.{json,yml}]
indent_size = 2
